@{
    ViewData["Title"] = "Home Page";
}
@model Home

<!-- Profile Section -->
<section id="profile" class="container my-4">
    <div class="row">
        <div class="col-md-6">
            <img src="~/assets/profile.jpg" alt="Profile Picture" class="profile-image">
        </div>
        <div class="col-md-6 mt-4 mt-md-0">
            <h1 class="display-4">NILOY DAS</h1>
            <p class="lead">Student, Computer Science and Engineering</p>
            <p>Hello, I'm a passionate software engineer with a focus on creating innovative and efficient solutions. I have experience in web development and enjoy turning complex problems into simple and intuitive solutions.</p>
            <div class="btn-group mt-3">
                <button class="btn btn-primary" onclick="window.open('https://www.linkedin.com/in/niloy-das-58902624b/')">LinkedIn</button>
                <button class="btn btn-secondary" onclick="window.open('https://github.com/human-netizen')">GitHub</button>
                <button class="btn btn-info" onclick="window.open('https://www.facebook.com/000oy/')">Facebook</button>
                <button class="btn btn-dark" onclick="window.open('https://www.instagram.com/niloy086/')">Instagram</button>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="container my-4">
    <div class="bg-light p-4 rounded shadow">
        <h2 class="display-4 text-center mb-4">About Me</h2>
        <p class="lead text-center">
            Hello there! I'm Niloy , a dynamic and passionate software engineer on a relentless quest to redefine possibilities in the digital realm. With a solid foundation in web development and a fervent desire to transform complex challenges into elegant, intuitive solutions, I bring a unique blend of creativity and technical prowess to every project I undertake.
        </p>
    </div>
</section>

<!-- Timeline Section -->
<section id="timeline" class="container my-4">
    <h2 class="display-4 text-center mb-4">Timeline</h2>

    <div class="timeline-item">
        <div class="timeline-date bg-primary text-white p-2 rounded">2018-2022</div>
        <div class="timeline-content bg-light p-4 rounded shadow">
            <h3 class="text-xl font-semibold mb-2 text-dark">KUET - BSc in CSE</h3>
            <p class="text-muted">Completed Bachelor of Science in Computer Science and Engineering from Khulna University of Engineering and Technology (KUET).</p>
        </div>
    </div>

    <div class="timeline-item">
        <div class="timeline-date bg-primary text-white p-2 rounded">2016-2018</div>
        <div class="timeline-content bg-light p-4 rounded shadow">
            <h3 class="text-xl font-semibold mb-2 text-dark">Notre Dame College</h3>
            <p class="text-muted">Studied at Notre Dame College.</p>
        </div>
    </div>

    <div class="timeline-item">
        <div class="timeline-date bg-primary text-white p-2 rounded">2010-2016</div>
        <div class="timeline-content bg-light p-4 rounded shadow">
            <h3 class="text-xl font-semibold mb-2 text-dark">BGPSC</h3>
            <p class="text-muted">Completed school education at BGPSC.</p>
        </div>
    </div>
</section>

<!-- Skills Section -->
<!-- Skills Section -->
<section id="skills" class="container my-4 p-10">
    <div class="bg-light p-4 rounded shadow">
        <h2 class="display-4 text-center mb-4">Skills</h2>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                JavaScript (ES6+)
                <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 80%;" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </li>
            <li class="list-group-item">
                React.js
                <div class="progress">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </li>
            <li class="list-group-item">
                Node.js
                <div class="progress">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </li>
            <li class="list-group-item">
                HTML5, CSS3
                <div class="progress">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 85%;" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </li>
            <li class="list-group-item">
                RESTful API design
                <div class="progress">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 78%;" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </li>
            <li class="list-group-item">
                Database Management (SQL, MongoDB)
                <div class="progress">
                    <div class="progress-bar bg-secondary" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </li>
            <li class="list-group-item">
                Git and Version Control
                <div class="progress">
                    <div class="progress-bar bg-dark" role="progressbar" style="width: 88%;" aria-valuenow="88" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </li>
        </ul>
    </div>
</section>


<!-- Projects Section -->
<section id="projects" class="container my-4">
    <h2 class="display-4 text-center mb-4">Projects</h2>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 proContainer">
        @foreach (var project in Model.Projects)
        {
            <div class="col">
                <div class="card project-card">
                    <div class="card-body">
                        <h3 class="card-title">@project.projectName</h3>
                        <p class="card-text">@project.projectDescription</p>
                        <a href="@project.projectLink" class="text-primary">View Project</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>


<!-- Contact Section -->
<section id="contact" class="container my-4">
    <div class="bg-light p-4 rounded shadow">
        <form asp-action="SubmitContactForm" method="post" class="row g-3">
            <div class="col-md-6">
                <label asp-for="ContactForm.FirstName" class="form-label"></label>
                <input asp-for="ContactForm.FirstName" class="form-control" />
                <span asp-validation-for="ContactForm.FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ContactForm.LastName" class="form-label"></label>
                <input asp-for="ContactForm.LastName" class="form-control" />
                <span asp-validation-for="ContactForm.LastName" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="ContactForm.Email" class="form-label"></label>
                <input asp-for="ContactForm.Email" class="form-control" />
                <span asp-validation-for="ContactForm.Email" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label asp-for="ContactForm.Message" class="form-label"></label>
                <textarea asp-for="ContactForm.Message" class="form-control" rows="4"></textarea>
                <span asp-validation-for="ContactForm.Message" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
        </form>

    </div>
</section>
