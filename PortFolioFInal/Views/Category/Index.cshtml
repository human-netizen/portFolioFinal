@model List<Category> 

<div class = "row pt-4 pb-2">
    <div class="col-6">
                <h2>Category List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Add Category</a>
    </div>
</div>  
<table class = "table table-bordered">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(u=>u.Description))
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
            </tr>
        }
</table>